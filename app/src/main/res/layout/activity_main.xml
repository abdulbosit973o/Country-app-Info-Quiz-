<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.main.MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/infoQuizBarColor1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/titanone_regular"
            android:text="Select Region"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/recycler"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:background="@color/infoAppBackground"-->
    <!--        android:layout_weight="10"-->

    <!--        />-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#21252F">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/allCountries"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"


                            android:src="@drawable/all_2" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="All Countries"
                        android:textColor="#fff"
                        android:textSize="28sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/africa"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"
                            android:src="@drawable/africa1" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="Africa"
                        android:textColor="#fff"
                        android:textSize="28sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/europe"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"
                            android:src="@drawable/europe1" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"

                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="Europe"
                        android:textColor="#fff"
                        android:textSize="28sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/asia"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"
                            android:src="@drawable/asia1" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"

                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="Asia"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/australia"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"
                            android:src="@drawable/australia" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="Oceania"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?selectableItemBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/americas"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:scaleType="centerCrop"
                            android:src="@drawable/americas" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/titanone_regular"
                        android:text="Americas"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp" />

                </FrameLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff">

        <FrameLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#012E51"
                android:padding="15dp"
                android:src="@drawable/home"
                app:tint="@color/white" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/quizButton"
            android:layout_width="0dp"
            android:background="?selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/infoQuizBarColor1"
                android:padding="15dp"
                android:src="@drawable/quiz"
                app:tint="@color/white" />
        </FrameLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>