<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/infoAppBackground"
    tools:context=".presentation.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="#1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/finish"
                android:background="?android:selectableItemBackground"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:src="@drawable/finish"/>
        </FrameLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="@color/infoQuizBarColor1"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:fontFamily="@font/worksans_font"
            android:textColor="@color/white"
            tools:text="Savol" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:clickable="true"
            android:background="#17212B"
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:focusable="true">

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/image_variant1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_unchecked"
                app:tint="#FFCC00" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_variant1"
                android:layout_width="match_parent"
                android:fontFamily="@font/worksans_font"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/app_name" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:clickable="true"
            android:background="#17212B"
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:focusable="true">

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/image_variant2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_unchecked"
                app:tint="#FFCC00" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_variant2"
                android:layout_width="match_parent"
                android:fontFamily="@font/worksans_font"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/app_name" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:clickable="true"
            android:background="#17212B"
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:focusable="true">

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/image_variant3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_unchecked"
                app:tint="#FFCC00" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_variant3"
                android:layout_width="match_parent"
                android:fontFamily="@font/worksans_font"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/app_name" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:clickable="true"
            android:background="#17212B"
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:focusable="true">

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/image_variant4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_unchecked"
                app:tint="#FFCC00" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_variant4"
                android:layout_width="match_parent"
                android:fontFamily="@font/worksans_font"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/app_name" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <Button
            android:backgroundTint="@color/infoQuizBarColor2"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_height="60dp"
            android:text="Next"
            android:textSize="20sp"
            android:fontFamily="@font/worksans_font"/>

    </FrameLayout>
</LinearLayout>